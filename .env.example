# =============================================================================
# GEO Content Platform - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# DO NOT commit .env files with real values to version control!

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL_WRITER=gpt-4.1-mini
OPENAI_MODEL_EVALUATOR=gpt-4.1

# -----------------------------------------------------------------------------
# Anthropic Configuration (for Claude 3.5 Haiku Writer)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL_WRITER=claude-3-5-haiku-20241022

# -----------------------------------------------------------------------------
# Web Search (Tavily)
# -----------------------------------------------------------------------------
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# -----------------------------------------------------------------------------
# Tracing Configuration
# -----------------------------------------------------------------------------
# Set to 1 to disable tracing (0 = enabled, which is default)
OPENAI_AGENTS_DISABLE_TRACING=0

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Maximum evaluation iterations before accepting best draft
MAX_ITERATIONS=3

# Minimum quality score threshold (0-100)
QUALITY_THRESHOLD=70

# Minimum E-E-A-T score threshold (1-10)
EEAT_THRESHOLD=6

# Environment (development, staging, production)
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# AWS Configuration (Production)
# -----------------------------------------------------------------------------
# AWS region for S3 and Secrets Manager
AWS_REGION=ap-southeast-1

# S3 bucket for file uploads (leave empty for local storage)
S3_BUCKET_UPLOADS=

# AWS Secrets Manager secret name
AWS_SECRET_NAME=geo-content/api-keys

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Path to SQLite database file (leave empty for in-memory storage)
DB_PATH=
